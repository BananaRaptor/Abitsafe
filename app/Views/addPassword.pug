extends  Layout/layout

block script
    script(src='/javascripts/addPassword.js')

block content
    h2= title
    +flash()
    +form("post","/addPassword")
        .form-group
            label
                p.label-txt Mots de passe
            div.row
                div.col-9
                    input#password.input.form-control(type='text' name="password")
                    .line-box
                        .line
                div.col-3
                    input.generate.btn.btn-info.ml-4(type='button' value='Générer un mots de passes')
        .form-group
            label
                p.label-txt Lien
            input.input.form-control(type='text' name="link" )
            .line-box
                .line
        .form-group
            div.row
                div.col-10
                div.col-2
                    button.btn.btn-lg.btn-info.ml-45(type='submit') Confirmer